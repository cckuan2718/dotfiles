#!/bin/sh
# Program:
#	* Clears the build files of a LaTeX/XeLaTeX build.
#	* I have vim run this file whenever I exit a .tex file.
# Dependency:
#	* nil
# Author:
# 	* Chang, Chu-Kuan <cckuan@changchukuan.name>

case "$1" in
*.tex)
	file=$(readlink -f "$1")
	dir=$(dirname "${file}")
	find -f "${dir}" \( -maxdepth 1 -type f \
	    -name '*-blx.bib' \
	    -o -name '*.aux' \
	    -o -name '*.bbl' \
	    -o -name '*.blg' \
	    -o -name '*.log' \
	    -o -name '*.nav' \
	    -o -name '*.out' \
	    -o -name '*.run.xml' \
	    -o -name '*.snm' \
	    -o -name '*.toc' \
	\) -delete
	;;
*)
	printf 'Give .tex file as argument.\n'
	;;
esac

