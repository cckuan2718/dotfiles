#!/bin/sh
# Program:
# *   Select and open cheatsheet
# Dependency:
# *   dmenu(1)
# *   xdg-open(1)
# Author:
# *   Chang, Chu-Kuan <cckuan@changchukuan.name>

#
# Settings
#

readonly csdir="${HOME}/documents/"

#
# Proper
#

readonly progname="$(basename "$0")"

cd "${csdir}" || exit 1

file="$(
	find . -type f -maxdepth 2 \
	    | sed 's|^\./||' \
	    | dmenu -i -l 5 -p 'Which document to open?'
)"

[ -f "${file}" ] && xdg-open "${file}"

