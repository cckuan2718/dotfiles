#!/bin/sh
# Program:
# *   Select and open cheatsheet
# Dependency:
# *   dmenu(1)
# *   xdg-open(1)
# Author:
# *   Chang, Chu-Kuan <cckuan@changchukuan.name>

# shellcheck disable=SC2034
readonly progname="$(basename "$0")"

cd "${HOME}" || exit 1

file="$(
	find 'downloads' 'documents' -type f -maxdepth 5 \
	    \( -name '*.pdf' -o -name '*djvu' \) \
	    | sed 's|^\./||' \
	    | dmenu -i -l 5 -p 'Which document to open?'
)"

[ -f "${file}" ] && xdg-open "${file}"

