#!/bin/sh
# Program:
# *   A dmenu wrapper script for power management.
# Dependency:
# *   dmenu(1)
# *   prompt.sh
# Author:
# *   Chang, Chu-Kuan <cckuan@changchukuan.name>

# shellcheck source=/dev/null
. prompt.sh

readonly progname="$(basename "$0")"
readonly menu='lock screen
leave window manager
suspend
reboot
shutdown'

readonly chosen="$(
	printf '%s' "${menu}" | dmenu -l 5 -p 'Power management option?'
)"

case "${chosen}" in
'lock screen')
	lockscreen
	;;
'leave window manager')
	pkill -qu "$(id -u)" '^dwm$'
	;;
'suspend')
	zzz
	;;
'reboot')
	prompt "${chosen} now?" || exit 0
	xsetroot -cursor_name watch
	sync
	sync
	sync
	doas shutdown -r now
	;;
'shutdown')
	prompt "${chosen} now?" || exit 0
	xsetroot -cursor_name watch
	sync
	sync
	sync
	doas shutdown -p now
	;;
*)
	exit 1
	;;
esac

