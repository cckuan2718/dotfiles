#!/bin/sh
# Program:
# *   This program belongs to panel(1).
# *   torrent module
# *   Display transmission status.
# Dependency:
# *   transmission-remote(1)
# *   notify-send(1)
# Author:
# *   Chang, Chu-Kuan <cckuan@changchukuan.name>

readonly progname="$(basename "$0")"

torrent()
{
	transmission-remote -l \
	    | grep % \
	    | sed -e 's/.*Stopped.*/Sp/g' \
	        -e 's/.*Seeding.*/Sd/g' \
	        -e 's/.*100%.*/Dn/g' \
	        -e 's/.*Idle.*/Id/g' \
	        -e 's/.*Uploading.*/Up/g' \
	        -e 's/.*%.*/Dl/g' \
	    | sort -h \
	    | uniq -c \
	    | sed -e 's/Sp//g' \
	        -e 's/Id//g' \
	        -e 's/Up//g' \
	        -e 's/Dl//g' \
	        -e 's/Dn//g' \
	        -e 's/Sd//g" ' \
	| awk '
		BEGIN {
			printf("torrent;");
		}

		{
			printf(" %s %s", $2, $1);
		}

		END {
			printf("\n");
		}
	'
}

if pgrep -q 'transmission-dae'; then
	torrent
else
	printf 'torrent_alert; DOWN\n'
fi

