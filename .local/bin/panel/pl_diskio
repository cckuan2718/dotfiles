#!/bin/sh
# Program:
# *   This program belongs to panel(1).
# *   iostatus module.
# *   Display disk transfer
# Dependency:
# *   iostat(1)
# Author:
# *   Chang, Chu-Kuan <cckuan@changchukuan.name>

readonly progname="$(basename "$0")"

readonly transfer_rx="$(
	iostat -d -w 3 -c 2 \
	    | tail -n 1 \
	    | tr -s '[:blank:]' ':' \
	    | cut -d ':' -f 4
)"

printf 'diskio;ï”Ÿ %.2fMB/s\n' "${transfer_rx}"

