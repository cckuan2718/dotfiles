#!/bin/sh
# Program:
#	* This program belongs to panel.
# 	* Displays number of unread mail and an loading icon if updating.
# Dependency:
#	* nil
# Author:
#       * Chang, Chu-Kuan <cckuan@changchukuan.name>

readonly unread_cnt="$(
	find "${HOME}"/.local/share/mail/*/[Ii][Nn][Bb][Oo][Xx]/new/* \
	    -type f 2>/dev/null \
	    | wc -l 2>/dev/null
)"

if [ -s "/var/mail/$(id -un)" ]; then
	local_mail='lo'
else
	local_mail=''
fi

if pgrep -q mbsync; then
	printf 'mailbox; \n'
else
	printf 'mailbox; %d %s\n' "${unread_cnt}" "${local_mail}"
fi
