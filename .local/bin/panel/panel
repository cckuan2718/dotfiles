#!/bin/sh
# Program:
# *   This program belongs to panel.
# *   Calls various modules to fire up various modules, which send their
#     outputs to "${PANEL_FIFO}". Then calls panel_bar(1) to read
#     from "${PANEL_FIFO}" and form a valid status line. Finally, display
#     status line by calling xsetroot(1).
# Dependency:
# *   panel_bar(1)
# Author:
# *   Chang, Chu-Kuan <cckuan@changchukuan.name>

# shellcheck disable=SC2034
readonly progname="$(basename "$0")"
export PANEL_FIFO="${PANEL_FIFO:-/tmp/panel_$(id -u)}"
export PANEL_SUPRESS="${PANEL_SUPRESS:-1}" # supress some module output

[ -e "${PANEL_FIFO}" ] && rm "${PANEL_FIFO}"
mkfifo "${PANEL_FIFO}"

trap 'trap - TERM; kill 0' INT TERM QUIT EXIT

while true; do
	pl_clock
	sleep 1
done > "${PANEL_FIFO}" &

while true; do
	pl_backlight
	sleep 3
	pl_bandwidth
	sleep 3
	pl_battery
	sleep 3
	pl_diskio
	sleep 3
	pl_iface trunk0
	sleep 3
	pl_mailbox
	sleep 3
	pl_news
	sleep 3
	pl_sensors
	sleep 3
	pl_torrent
	sleep 3
	pl_vmstatus
	sleep 3
	pl_volume
	sleep 10
done > "${PANEL_FIFO}" &

panel_bar < "${PANEL_FIFO}" \
| while read -r line; do
	xsetroot -name " ${line} "
done &

wait

