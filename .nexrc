"
" .nexrc
"

"
" Settings
"

set autoindent
set cedit=\
set extended
set ignorecase
set noexpandtab
set noflash
set number
set report=1
set ruler
set showmatch
set showmode
set tabstop=8

"
" Key bindings
"

map gg 1G

" Read and append <cmd> stdout to next line, first white space
map rb :r!tmux show-buffer
map rc :r!xclip -o -selection clipboard
map rd :r!diff -u # %
map rs :r!uname -rs
map rt :r!date +\%Y-\%m-\%d\ \%H:\%S

" Formatting
map gF {!}fmt -spw 80
map gS {j!}sort -ur
map gf {!}fmt -spw 72
map gh :!hunspell -d en_US %^M
map gs {!}sort -u
map gt mm:%s/[[:space:]]*$//
map gx !'mtmux load-buffer c

"
" Abbrevations
"

ab #d #define
ab #i #include
ab name Chang, Chu-Kuan
ab mail cckuan@changchukuan.name

