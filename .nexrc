"
" .nexrc
"

"
" Settings
"

set autoindent
set noexpandtab
set extended
set noflash
set ignorecase
set number
set report=1
set ruler
set showmatch
set showmode
set tabstop=8

"
" Key bindings
"

map gg 1G

map gd :r!date +\%Y\%m\%d
map gp :r!xclip -o -selection clipboard
map gP :r!tmux show-buffer
map gY !'mtmux load-buffer -
map gs {!}sort -u
map gS {j!}sort -ur
map gf {!}fmt -spw 72
map gt mm:%s/[[:space:]]*$//
set cedit=\

