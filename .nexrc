"
" .nexrc
"

"
" Settings
"

set autoindent
set noexpandtab
set extended
set noflash
set ignorecase
set number
set report=1
set ruler
set showmatch
set showmode
set tabstop=8
set cedit=\

"
" Key bindings
"

map gg 1G

map gd :r!date +\%Y\%m\%d
map gP :r!xclip -o -selection clipboard
map gx !'mtmux load-buffer -
map gp :r!tmux show-buffer
map gs {!}sort -u
map gS {j!}sort -ur
map gf {!}fmt -spw 72
map gF {!}fmt -spw 80
map gt mm:%s/[[:space:]]*$//

