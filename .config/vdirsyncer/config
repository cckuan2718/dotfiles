#
# Configuration for vdirsyncer
#

[general]
# A folder where vdirsyncer can store some metadata about each pair.
#status_path = "~/.vdirsyncer/status/"
status_path = "~/.config/vdirsyncer/status/"

#
# CardDAV
#

[pair core_contacts]
a = "core_contacts_local"
b = "core_contacts_remote"
collections = ["from a", "from b"]

# Synchronize the "display name" property into a local file (~/.contacts/displayname).
metadata = ["displayname"]

[storage core_contacts_local]
# A storage references actual data on a remote server or on the local disk.
# Similar to repositories in OfflineIMAP.
type = "filesystem"
path = "~/.local/share/contacts/core"
fileext = ".vcf"

[storage core_contacts_remote]
type = "carddav"
url = "https://dav.changchukuan.name/.well-known/carddav/"
username = "cckuan"
#password = ""
password.fetch = ["command", "pass", "core"]
auth = "digest"

#
# CalDAV
#

[pair core_calendar]
a = "core_calendar_local"
b = "core_calendar_remote"
collections = ["from a", "from b"]

# Calendars also have a color property
metadata = ["displayname", "color"]

[storage core_calendar_local]
type = "filesystem"
path = "~/.local/share/calendars/core/"
fileext = ".ics"

[storage core_calendar_remote]
type = "caldav"
url = "https://dav.changchukuan.name/.well-known/caldav/"
username = "cckuan"
#password = ""
password.fetch = ["command", "pass", "core"]
auth = "digest"
