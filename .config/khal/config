[calendars]

[[core_calendar_local]]
path = ~/.local/share/calendars/core/*
type = discover
color = auto

[locale]
timeformat = %H:%M
dateformat = %Y-%m-%d
longdateformat = %Y-%m-%d
datetimeformat = %Y-%m-%d %H:%M
longdatetimeformat = %Y-%m-%d %H:%M
firstweekday = 6

[default]
highlight_event_days = True
timedelta = 3d

[highlight_days]
method = foreground
multiple = dark magenta

[view]
bold_for_light_color = False
event_view_always_visible = False
frame = color
theme = dark
