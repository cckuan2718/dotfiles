#
# lfrc
#

#
# Settings
#

set globsearch
set hidden
set hiddenfiles '.*:*.aux:*.log:*.bbl:*.bcf:*.blg:*.run.xml'
set ifs "\n"
set info 'size'
set nodirfirst
set period 1
set scrolloff 10
set shell sh
set shellopts '-eu'
set sortby 'name'

#
# Custom functions
#

cmd open ${{
	case "$(file --mime-type "$f" -b)" in
	text/*|application/x-shellscript)
		${EDITOR} ${fx}
		;;
	*)
		for file in ${fx}; do
			${OPENER} "${file}" > /dev/null 2> /dev/null &
		done
		;;
	esac
}}

#
# Key bindings
#

# use enter for shell commands
map <enter> shell

# execute current file (must be executable)
map x $$f
map X !$f

# dedicated keys for file opener actions
map o &mimeopen $f
map O $mimeopen --ask $f

